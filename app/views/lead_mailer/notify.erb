<table width="100%" cellspacing="1" cellpadding="10" style="border:1px solid #c0c0c0;background:#f8f8f8;">
 <tbody style="padding:10px;">
    <tr>
        <th colspan="2" width="100%" style="font: italic 20px Georgia, "Times New Roman", serif;color: #3B5F87;border-bottom: 1px solid #ECECE8;">New <%= @formData['type'] %></th>
    </tr>
    <% @formData.except(:type).each do |key, field| %>
    <tr style="border-top:1px solid #f5f5f5;border-bottom:1px solid #f5f5f5;margin:2px;">
      <td width="20%" style="background:#f8f8f8;color:#000;padding:5px;"><%= key.split.each { |x| print x.capitalize!, "_"}.join(" ") %></td>
      <td width="80%" style="background:#fff;color:#333;padding:5px;"><%= field %></td>
    </tr>
    <% end %>
</tbody>
</table>
